{
    "multipart": [
    {   "apply": { "model": "diamondglass:block/diamondglasspane_lime_post" }},
    {   "when": { "north": true },
        "apply": { "model": "diamondglass:block/diamondglasspane_lime_side" }
    },
        {   "when": { "east": true },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "diamondglass:block/diamondglasspane_lime_noside", "y": 270 }
        }
    ]
}
